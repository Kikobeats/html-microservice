{
  "name": "html-microservice",
  "description": "Get HTML from any URL.",
  "homepage": "https://github.com/microlinkhq/html",
  "version": "0.0.0",
  "main": "src/index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/html.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/html/issues"
  },
  "keywords": [
    "browserless",
    "html",
    "microservice",
    "puppeteer"
  ],
  "dependencies": {
    "beauty-error": "~1.2.2",
    "browserless": "~5.9.1",
    "cacheable-response": "~1.6.12",
    "debug-logfmt": "~1.0.2",
    "helmet": "~3.20.0",
    "html-get": "~2.2.12",
    "http-status": "~1.3.2",
    "is-url-http": "~1.2.0",
    "luminati-tunnel": "~1.3.0",
    "micro": "~9.3.4",
    "micro-dev": "~3.0.0",
    "micro-route": "~2.5.0",
    "prepend-http": "~3.0.1",
    "pretty": "~2.0.0",
    "pretty-ms": "~5.0.0",
    "puppeteer-core": "~1.19.0",
    "tldts": "~5.3.2",
    "tough-cookie": "~3.0.1",
    "ua-string": "~3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "micro-dev": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest",
    "untracked": "latest"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "untracked > .nowignore",
    "clean": "rm -rf node_modules",
    "dev": "NODE_ENV=development micro-dev",
    "heroku-prebuild": "untracked > .slugignore",
    "lint": "standard-markdown README.md && standard",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "start": "DEBUG=html-microservice* NODE_ENV=production micro",
    "test": "exit 0",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.js": [
      "prettier-standard",
      "git add"
    ],
    "*.md": [
      "standard-markdown",
      "git add"
    ]
  }
}
