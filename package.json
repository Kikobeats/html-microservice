{
  "name": "html-microservice",
  "description": "Get HTML from any URL.",
  "homepage": "https://github.com/microlinkhq/html",
  "version": "0.0.0",
  "main": "src/index.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/html.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/html/issues"
  },
  "keywords": [
    "browserless",
    "html",
    "microservice",
    "puppeteer"
  ],
  "dependencies": {
    "beauty-error": "~1.2.0",
    "browserless": "~5.4.1",
    "cacheable-response": "~1.6.7",
    "compression": "~1.7.4",
    "cors": "~2.8.5",
    "debug-logfmt": "~1.0.2",
    "express": "~4.17.1",
    "helmet": "~3.18.0",
    "html-get": "~2.2.3",
    "is-url-http": "~1.2.0",
    "jsendp": "~2.1.0",
    "lodash": "~4.17.11",
    "luminati-tunnel": "~1.3.0",
    "morgan": "~1.9.1",
    "pretty": "~2.0.0",
    "pretty-ms": "~5.0.0",
    "puppeteer-core": "~1.17.0",
    "tough-cookie": "~3.0.1",
    "ua-string": "~3.0.0"
  },
  "devDependencies": {
    "puppeteer": "latest",
    "coveralls": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "svr": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "heroku-prebuild": "npx untracked > .slugignore",
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "svr",
    "lint": "standard-markdown README.md && standard",
    "pretest": "npm run lint",
    "pretty": "prettier-standard {core,test,bin}/**/*.js",
    "start": "node src/server.js",
    "test": "exit 0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
